{
  "name": "tomjn.com",
  "version": "1.0.0",
  "description": "The WP theme for tomjn.com",
  "scripts": {
    "build": "npm run build:less && npm run build:scss",
    "build:scss": "sass assets/scss/frontend.scss:assets/dist/frontend.css --style=compressed && sass assets/scss/editor.scss:assets/dist/editor.css --style=compressed",
    "build:less": "lessc style.less assets/dist/less.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomjn/tomjn.com.git"
  },
  "keywords": [
    "wordpress",
    "theme"
  ],
  "author": "Tom J Nowell",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/tomjn/tomjn.com/issues"
  },
  "homepage": "https://github.com/tomjn/tomjn.com#readme",
  "require": {
    "scss": "*"
  },
  "devDependencies": {
    "bulma": "^0.8.2",
    "less": "^3.13.1",
    "sass": "^1.32.8"
  },
  "dependencies": {
    "animate.css": "^4.1.1"
  }
}
